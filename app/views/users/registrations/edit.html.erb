<div class="container mt-3 pt-5 pb-5 ps-5 pe-5 border border-2 rounded-3">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center">Editar cuenta</h1>
    </div>
  </div>
  <div class="row">
    <div class="d-grid gap-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label "Nombre" %>
          <%= f.text_field :name, class: "form-control", readonly: true %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label "Número de cédula" %>
          <%= f.text_field :id_card, class: "form-control", readonly: true %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label "Teléfono" %>
          <%= f.text_field :phone, class: "form-control", readonly: true %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label "Correo electrónico" %>
          <%= f.text_field :email, class: "form-control", readonly: true %>
        </div>
        <br>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-group">
          <%= f.label "Nueva contraseña" %> <i>(Dejar en blanco si se no se desea actualizar)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> caracteres mínimos</em>
          <% end %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label "Confirmación de la nueva contraseña" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Contraseña actual" %> <i>(Se necesita la contraseña actual para actualizar los datos)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <br>
        <div class=" container">
          <div class="row">
            <div class="col-md-6 text-center">
              <%= button_tag( :class => "btn btn-primary") do %>
                <i class="bi bi-check-lg"></i>
                Actualizar
              <% end %>
            </div>
            <div class="col-md-6 text-center">
              <%= link_to :back, class:"btn btn-primary" do %>
                <i class="bi bi-arrow-bar-left"></i>
                Volver
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
