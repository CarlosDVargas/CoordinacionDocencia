<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>Cédula</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @investigators.each do |investigator| %>
      <tr>
        <td><%= investigator.id_card %></td>
        <td><%= investigator.first_name %></td>
        <td><%= investigator.last_name %></td>
        <td><%= investigator.email %></td>
        <td>
          <%= link_to edit_investigator_path(investigator), class: 'btn btn-primary' do %>
            <i class="bi bi-pencil"></i>
            Editar
          <% end %>
          <%= link_to investigator, method: :delete, data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro?' }, class: 'btn btn-danger' do %>
            <i class="bi bi-trash"></i>
            Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
